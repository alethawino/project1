@model IEnumerable<project1.Models.album>

@{
    ViewBag.Title = "Index";

}

<h2><i class="fa fa-search fa-lg" aria-hidden="true"></i>&nbsp;Search</h2>


<div class="row">
    <div class="col-lg-3 col-md-6">
      Album Name  <input type="text" id="albumName" class="form-control" />
    </div>
    <div class="col-lg-3 col-md-6">
        Band Name  <input type="text" id="bandName" class="form-control" />
    </div>
    
    <div class="col-lg-3 col-md-6">
        <input type="submit" class="btn btn-default" id="search" value="Search">
    </div>
    <div class="col-lg-3 col-md-6">
       
    </div>
  
</div>
<div class="row" id="searchResult">
</div>
<script>
    function loadSearchResult() {
        var albumName = $("#albumName").val();
        var bandName = $("#bandName").val();
        console.log(albumName);
        console.log(bandName);
        $.ajax({
            type: "GET",
            url: "/Albums/Search",
            data: "albumname=" + albumName + "&bandname=" + bandName,
            cache: false,
            success: function (data) {
                $("#searchResult").html(data);
                console.log("yaeah came back successful");
            }
        });

    }
    $("#search").click(function () {
        $("#searchResult").html("");
        loadSearchResult();
    });
</script>